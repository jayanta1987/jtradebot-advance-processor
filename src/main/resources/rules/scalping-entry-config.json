{
  "strategy": "SCALPING_ENTRY_LOGIC",
  "version": "1.0",
  "description": "Comprehensive scalping entry logic for CALL and PUT strategies with proper risk management",
  
  "callStrategy": {
    "strategyType": "CALL",
    "entryConditions": {
      "mandatoryConditions": [
        "volume_5min_surge",
        "rsi_5min_gt_56",
        "price_5min_gt_vwap"
      ],
      "optionalConditions": [
        "ema_5min_crossover",
        "ema_1min_crossover",
        "ema_15min_crossover",
        "volume_1min_surge",
        "volume_15min_surge",
        "rsi_1min_gt_56",
        "rsi_15min_gt_56",
        "price_1min_gt_vwap",
        "price_15min_gt_vwap",
        "price_1min_above_resistance",
        "price_5min_above_resistance"
      ],
      "minMandatoryCount": 3,
      "minOptionalCount": 3,
      "minConfidenceScore": 0.6,
      "requireVolumeConfirmation": true,
      "requirePriceActionConfirmation": true
    },
    "riskManagement": {
      "maxRiskPerTrade": 1.0,
      "stopLossPercentage": 0.3,
      "stopLossPoints": 3.0,
      "targetPercentage": 0.8,
      "targetPoints": 8.0,
      "maxHoldingTimeMinutes": 3,
      "useTrailingStop": true,
      "trailingStopPercentage": 0.2,
      "useBreakEven": true,
      "breakEvenTrigger": 0.4
    },
    "entryQuality": {
      "minVolumeSurge": 2.0,
      "minRsiStrength": 56.0,
      "minSignalStrength": 7.0
    },
    "marketConditions": {
      "maxSpreadPercentage": 0.1,
      "minLiquidityThreshold": 1000000,
      "avoidTimeSlots": ["09:15-09:30", "15:15-15:30"]
    }
  },
  
  "putStrategy": {
    "strategyType": "PUT",
    "entryConditions": {
      "mandatoryConditions": [
        "volume_5min_surge", 
        "rsi_5min_lt_44",
        "price_5min_lt_vwap"
      ],
      "optionalConditions": [
        "ema_5min_crossdown",
        "ema_1min_crossdown",
        "ema_15min_crossdown",
        "volume_1min_surge",
        "volume_15min_surge",
        "rsi_1min_lt_44",
        "rsi_15min_lt_44",
        "price_1min_lt_vwap",
        "price_15min_lt_vwap",
        "price_1min_below_support",
        "price_5min_below_support"
      ],
      "minMandatoryCount": 3,
      "minOptionalCount": 3,
      "minConfidenceScore": 0.6,
      "requireVolumeConfirmation": true,
      "requirePriceActionConfirmation": true
    },
    "riskManagement": {
      "maxRiskPerTrade": 1.0,
      "stopLossPercentage": 0.3,
      "stopLossPoints": 3.0,
      "targetPercentage": 0.8,
      "targetPoints": 8.0,
      "maxHoldingTimeMinutes": 3,
      "useTrailingStop": true,
      "trailingStopPercentage": 0.2,
      "useBreakEven": true,
      "breakEvenTrigger": 0.4
    },
    "entryQuality": {
      "minVolumeSurge": 2.0,
      "minRsiStrength": 44.0,
      "minSignalStrength": 7.0
    },
    "marketConditions": {
      "maxSpreadPercentage": 0.1,
      "minLiquidityThreshold": 1000000,
      "avoidTimeSlots": ["09:15-09:30", "15:15-15:30"]
    }
  },
  
  "futuresignalsConfig": {
    "enabledTimeframes": ["1min", "5min"],
    "callStrategy": {
      "minBullishTimeframes": 2,
      "requireAllTimeframes": false,
      "description": "CALL entry requires at least 2 out of 2 timeframes to be bullish"
    },
    "putStrategy": {
      "minBearishTimeframes": 2,
      "requireAllTimeframes": false,
      "description": "PUT entry requires at least 2 out of 2 timeframes to be bearish"
    }
  }
}
