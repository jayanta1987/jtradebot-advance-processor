{
  "strategy": "SCALPING_FUTURE_VOLUME_SURGE",
  "version": "1.0",
  "description": "Scalping strategy based on volume surge and technical indicators across multiple timeframes",
  
  "callRule": {
    "ruleName": "SCALPING_FUTURE_VOLUME_SURGE_BULLISH",
    "strategyType": "SCALPING_FUTURE_VOLUME_SURGE_BULLISH",
    "isActive": true,
    
    "entryConditions": {
      "requireAllTimeframesBullish": true,
      "requireVolumeSurge": true,
      "requireEmaCrossover": true,
      "requireRsiOverbought": true,
      "requirePriceAboveVwap": true,
      "requirePriceAboveResistance": true
    },
    
    "thresholds": {
      "minVolumeSurgeMultiplier": 2.0,
      "minRsiThreshold": 56.0,
      "minSignalStrength": 7.0
    },
    
    "timeframes": {
      "check1Min": true,
      "check5Min": true,
      "check15Min": true
    },
    
    "riskManagement": {
      "stopLossPercentage": 0.5,
      "targetPercentage": 1.0,
      "maxHoldingTimeMinutes": 30
    }
  },
  
  "putRule": {
    "ruleName": "SCALPING_FUTURE_VOLUME_SURGE_BEARISH",
    "strategyType": "SCALPING_FUTURE_VOLUME_SURGE_BEARISH",
    "isActive": true,
    
    "entryConditions": {
      "requireAllTimeframesBearish": true,
      "requireVolumeSurge": true,
      "requireEmaCrossover": true,
      "requireRsiOversold": true,
      "requirePriceBelowVwap": true,
      "requirePriceBelowSupport": true
    },
    
    "thresholds": {
      "minVolumeSurgeMultiplier": 2.0,
      "maxRsiThreshold": 44.0,
      "minSignalStrength": 7.0
    },
    
    "timeframes": {
      "check1Min": true,
      "check5Min": true,
      "check15Min": true
    },
    
    "riskManagement": {
      "stopLossPercentage": 0.5,
      "targetPercentage": 1.0,
      "maxHoldingTimeMinutes": 30
    }
  },
  
  "futuresignalRequirements": {
    "timeframes": ["1min", "5min", "15min"],
    "minSignalStrength": 7.0,
    "requireAlignment": true,
    "description": "All timeframes must show aligned futuresignals for entry confirmation"
  },
  
  "indicatorWeights": {
    "emaCrossover": 0.25,
    "rsiCondition": 0.20,
    "volumeSurge": 0.25,
    "priceAction": 0.20,
    "futuresignals": 0.10
  },
  
  "volumeSurgeDefinition": {
    "multiplier": 2.0,
    "description": "Volume must be at least 2x the average volume for the timeframe",
    "timeframes": ["1min", "5min", "15min"]
  },
  
  "entryLogic": {
    "type": "ALL_CONDITIONS",
    "description": "All specified conditions must be met for entry",
    "fallback": "NO_TRADE"
  },
  
  "exitStrategy": {
    "stopLoss": "percentage_based",
    "target": "percentage_based",
    "timeBasedExit": true,
    "trailingStop": false
  }
}
